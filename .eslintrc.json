{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "js": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "testing-library"
    ],
    "overrides": [
        {
            "files": [ "**/tests/**/*.[jt]s?(x)", "**?(*.)+(spec|test).[jt]s?(X)" ],
            "extends": ["plugin:testing-library/react"]
        }
    ]
}
